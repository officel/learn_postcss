{
  "name": "learn_postcss",
  "version": "1.0.0",
  "description": "learn PostCSS",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build-clean && npm run build-css",
    "build-clean": "rimraf out",
    "build-css-prod": "postcss src/**/*.css -d out -u cssnano --no-map",
    "build-css": "postcss \"src/**/*.css\" -d out --fix",
    "watch-css": "postcss \"src/**/*.css\" -d out -w",
    "reformat-css": "stylefmt -r \"src/**/*.css\" "
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "postcss": "^6.0.7",
    "postcss-cssnext": "^3.0.2"
  },
  "private": true,
  "devDependencies": {
    "cssnano": "^3.10.0",
    "postcss-cli": "^4.1.0",
    "postcss-easy-import": "^2.1.0",
    "postcss-filter": "0.0.2",
    "postcss-loader": "^2.0.6",
    "rimraf": "^2.6.1",
    "stylefmt": "^6.0.0",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0"
  }
}
