{
  "name": "learn_postcss",
  "version": "1.0.0",
  "description": "learn PostCSS",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean":      "rimraf out",
    "clean-prod": "rimraf dist",

    "build":      "npm run clean      && npm run build-css",
    "build-prod": "npm run clean-prod && npm run build-css-prod",

    "build-css":      "postcss \"src/**/*.css\" -d out",
    "build-css-prod": "postcss \"src/**/*.css\" -d dist",

    "watch-css": "postcss \"src/**/*.css\" -d out -w",
    "reformat-css": "stylefmt -r \"src/**/*.css\" "
  },
  "author": "Office L",
  "license": "MIT",
  "dependencies": {
    "postcss": "^6.0.7",
    "postcss-cssnext": "^3.0.2"
  },
  "private": true,
  "devDependencies": {
    "cssnano": "^3.10.0",
    "postcss-cli": "^4.1.0",
    "postcss-easy-import": "^2.1.0",
    "postcss-filter": "0.0.2",
    "postcss-loader": "^2.0.6",
    "rimraf": "^2.6.1",
    "stylefmt": "^6.0.0",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0"
  }
}
